<div id="mylist-box" class="right-bar">
	<h3>Mine lister</h3>
	<div class="my-lists">
		<div class="single-list" id="id_new" style="display:none">
			<div class="myliste-tittel">Uten tittel</div>
			<div class="mytriangle open"></div>
			<div class="clearfix"></div>
			<div class="myliste-innhold" style="display:none">
				<ol class="sortable"></ol>
			<input autocomplete="off" class="liste-navn" placeholder="navn på lista" type="text" value="Uten tittel"><button class="save-list">lagre</button>
				<p><a href="" style="display:none">Lista som RSS-strøm</a></p>
			</div>
		</div>
		<% session[:mylists].each do |list| %>
			<div class="single-list" id="<%= list['uri'][31..-1] %>">
				<div class="myliste-tittel"><%= list["label"] %></div>
				<div class="mytriangle open"></div>
				<div class="clearfix"></div>
				<div class="myliste-innhold" style="display:none">
					<ol class="sortable">
						<% list["items"].each do |review| %>
							<li><a class="mylist-review" href="/anbefaling/<%= review["uri"][24,200] %>"><%= review["title"] %></a><a class="remove">x</a></li>
						<% end %>
					</ol>
					<input autocomplete="off" class="liste-navn" placeholder="navn på lista" type="text" value="<%= list['label'] %>"><button class="save-list">lagre</button>
					<p><a href="/feed?list=<%= list['uri'] %>&title=<%= list['label']%>">Lista som RSS-strøm</a></p>
				</div>
			</div>
		<% end %>
	</div>
</div>