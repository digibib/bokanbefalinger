<div id="login-box" class="right-bar">
	<% if session[:user] %>
		<p><strong>Hei, <%= session[:user] %>!</strong></p>
		<a href="/logout?take_me_back=<%= request.path_info %>"><button class="button-big" id="logout-button" type="submit">Logg ut</button></a>
	<% else %>
		<img id="logg-inn-her" src="/img/logg_inn.png" alt="Logg deg inn her for Ã¥ skrive en abefaling!" /><br>
		<img id="logg-inn-pil" src="/img/logg_inn_pil.png" alt="pil" />
		<p>Mine anbefalinger</p>
		<form id="login-form" action="/login" method="POST">
			<input name="take_me_back" type="hidden" value="<%= request.path %>">
			<input name="username" type="text" placeholder="Brukernavn" />
			<input name="password" type="password" placeholder="Passord" />
			<button class="button-big" id="login-button" type="submit">Logg inn</button>
		</form>
	<% end %>
</div>
