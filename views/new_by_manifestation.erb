<div class="main-left">
	<h2>Skriv ny anbefaling av:</h2>
	<div id="review-heading">
		<div class="book-cover <%= "light-gray" unless @utgave["cover_url"] %>">
			<% if @utgave["cover_url"] %>
				<img class="cover" src="<%= @utgave["cover_url"] %>"/>
			<% end %>
		</div>
		<div>
			<p><strong><%= @utgave["title"] %></strong></p>
			<p><strong><%= @utgave["author"] %></strong></p>
		</div>
	</div>
	<div class="clearfix"></div>
	<form id="review-form" action="/review" method="POST">
		<input type="hidden" id="isbn" name="isbn" value="<%= @utgave["isbn"] %>" />
		<input type="hidden" id="published" name="published" value="false" />
		<input id="title" class="required" type="text" name="title" placeholder="Tittel på anbefalingen"/>
		<textarea id="teaser" class="required" name="teaser" rows="2" placeholder="Skriv en teaser, maks to setninger"></textarea>
		<textarea id="text" class="required" name="text" rows="20" placeholder="Skriv en omtale"></textarea>

		<fieldset id="audiences-fieldset">
			<p>Målgruppe(r) for <em>anbefalingen</em>, ikke for boka:</p>
			<input id="a1" class="audiences" name="a1" type="checkbox" value="barn">
			<label for="a1" class="checklabel">barn</label>
			<input id="a2" class="audiences" name="a2" type="checkbox" value="ungdom">
			<label for="a2" class="checklabel">ungdom</label>
			<input id="a3" class="audiences" name="a3" type="checkbox" value="voksen">
			<label for="a3" class="checklabel">voksne</label>
		</fieldset>

		<div class="clearfix"></div>

		<div style="margin-top:20px;">
<!-- 			<div style="float:left">
				<button class="medium gray">Slett</button>
				<button class="medium gray">Forhåndsvisning</button>
			</div> -->
			<div style="float:right;margin-right:-25px">
				<button type="submit" id="draft" class="medium gray">Lagre kladd</button>
				<button type="submit" id="publish" class="medium red">Publisér</button>
			</div>
		</div>
		<div class="clearfix"></div><div style="margin-top: 100px"></div>
	</form>
</div>
<div class="main-right">
	<%= erb :login %>
	<%= erb :tipsbar %>
</div>